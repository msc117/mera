{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "exclude": [
    "./node_modules",
    "./typings/main.d.ts",
    "./typings/main"
  ],
  "filesGlob": [
    "./src/client/**/*.ts",
    "!./node_modules/**/*.ts",
    "./src/client/custom-typings.d.ts",
    "./typings/browser.d.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "resolveGlobs": true,
    "forkChecker": true
  },
  "compileOnSave": true,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false }
}
